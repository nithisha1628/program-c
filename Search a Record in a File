#include <stdio.h>
#include <string.h>
struct Student {
    int id;
    char name[30];
};
int main() {
    FILE *fp;
    struct Student s;
    int searchId, found=0;
    fp = fopen("students.dat","rb");
    if(fp==NULL) { printf("File not found!\n"); return 1; }
    printf("Enter student ID to search: ");
    scanf("%d",&searchId);
    while(fread(&s,sizeof(s),1,fp)) {
        if(s.id == searchId) {
            printf("Found: ID=%d Name=%s\n", s.id, s.name);
            found=1; break;
        }
    }
    if(!found) printf("Record not found.\n");
    fclose(fp);
    return 0;
}
