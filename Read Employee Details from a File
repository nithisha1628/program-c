#include <stdio.h>
struct Employee {
    int id;
    char name[30];
    float salary;
};

int main() {
    FILE *fp;
    struct Employee e;
    fp = fopen("employees.dat","rb");
    if(fp == NULL) { printf("File not found!\n"); return 1; }

    printf("Employee Records:\n");
    while(fread(&e, sizeof(e), 1, fp)) {
        printf("ID:%d Name:%s Salary:%.2f\n", e.id, e.name, e.salary);
    }
    fclose(fp);
    return 0;
}
