#include <stdio.h>
struct Student {
    int id;
    char name[30];
    float marks;
};

int main() {
    FILE *fp;
    struct Student s;
    fp = fopen("students.dat","wb"); // write binary
    if(fp == NULL) { printf("Error opening file!\n"); return 1; }

    printf("Enter student ID, Name, Marks: ");
    scanf("%d %s %f", &s.id, s.name, &s.marks);

    fwrite(&s, sizeof(s), 1, fp);
    fclose(fp);
    printf("Student details saved.\n");
    return 0;
}
