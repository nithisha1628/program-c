#include <stdio.h>
struct Student {
    int id;
    char name[30];
    float marks;
};

int main() {
    FILE *fp;
    struct Student s;
    int count=0;

    fp = fopen("students.dat","rb");
    if(fp == NULL) { printf("File not found!\n"); return 1; }

    while(fread(&s, sizeof(s), 1, fp)) {
        count++;
    }
    fclose(fp);

    printf("Total records in file = %d\n", count);
    return 0;
}
