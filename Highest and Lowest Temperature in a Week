#include <stdio.h>

int main() {
    float temp[7];
    int i;
    float high, low;

    printf("Enter temperatures for 7 days:\n");
    for (i = 0; i < 7; i++) {
        scanf("%f", &temp[i]);
    }

    high = low = temp[0];
    for (i = 1; i < 7; i++) {
        if (temp[i] > high) high = temp[i];
        if (temp[i] < low) low = temp[i];
    }

    printf("Highest Temperature = %.2f\nLowest Temperature = %.2f\n", high, low);
    return 0;
}
