#include <stdio.h>

int main() {
    int n, i, maxIndex = 0;
    printf("Enter number of students: ");
    scanf("%d", &n);

    int marks[n];
    for (i = 0; i < n; i++) {
        printf("Enter marks of student %d: ", i + 1);
        scanf("%d", &marks[i]);
        if (marks[i] > marks[maxIndex]) maxIndex = i;
    }

    printf("Topper is Student %d with %d marks\n", maxIndex + 1, marks[maxIndex]);
    return 0;
}
