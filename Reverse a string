#include <stdio.h>
#include <string.h>

int main() {
    char str[100], rev[100];
    printf("Enter a string: ");
    fgets(str, sizeof(str), stdin);

    int len = strlen(str);
    if(str[len-1] == '\n') str[len-1] = '\0'; // remove newline
    len = strlen(str);

    for(int i = 0; i < len; i++) {
        rev[i] = str[len-1-i];
    }
    rev[len] = '\0';

    printf("Reversed string: %s\n", rev);
    return 0;
}
